          {
            "id": "league_client",
            "anchor": "center",
            "fit": "native"
          }
        ]
      },
      "client_fullscreen": {
        "description": "Client scaled to fill stage",
        "sources": [
          {
            "id": "league_client",
            "fit": "fill"
          }
        ]
      }
    },

    "rules": [
      {
        "when": { "available": "league_game" },
        "layout": "game_fullscreen"
      },
      {
        "when": { "available": "league_client" },
        "layout": "client_centered"
      }
    ]
